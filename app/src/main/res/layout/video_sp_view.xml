<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:orientation="horizontal">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="10dp"
          android:layout_weight="1">

         <ImageView
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_weight="1"
             android:src="@drawable/raw_1500019926"
             android:id="@+id/video_huiremenfujin"/>
         <ImageView
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_weight="1"
             android:src="@drawable/raw_1499933216"
             android:id="@+id/video_xihuan"/>
         <ImageView
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_weight="1"
             android:src="@drawable/raw_1499933217"
             android:id="@+id/video_buxihuan"/>
         <ImageView
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_weight="1"
             android:src="@drawable/raw_1499995160"
             android:id="@+id/video_fenxiang"/>
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="10dp"
          android:layout_weight="1">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"/>
         <ImageView
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:id="@+id/video_touxiang"
             android:src="@drawable/touxiang"/>
      </LinearLayout>
   </LinearLayout>

   <cn.jzvd.JZVideoPlayerStandard
       android:id="@+id/videoplayer"
       android:layout_width="match_parent"
       android:layout_height="200dp"/>

   <ImageView
       android:layout_width="200dp"
       android:layout_height="200dp"
       android:layout_gravity="center"
       android:src="@drawable/raw_1500033586"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:gravity="center">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="拿起手机速来"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="抢个沙发"
          android:id="@+id/video_qiangshafa"
          android:textColor="#3333FF"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="吧！"/>
   </LinearLayout>

</LinearLayout>