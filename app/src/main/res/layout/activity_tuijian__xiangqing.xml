<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.liufan.xiangmu.activity.Tuijian_Xiangqing_Activity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:background="@drawable/ic_hgg"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_fanhui"
        android:padding="26px"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MC 跨足令"
        android:layout_centerHorizontal="true"
        android:textSize="34px"
        android:layout_marginTop="26px"
        android:textColor="#ffff"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_fx111"
        android:layout_alignParentRight="true"
        android:padding="20px"
        />
    <ImageView
        android:id="@+id/sdv_3"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_marginLeft="50px"
        android:layout_marginTop="230px"
        android:src="@mipmap/ic_launcher_round"
        />
    <TextView
        android:layout_marginLeft="20px"
        android:layout_toRightOf="@+id/sdv_3"
        android:layout_marginTop="315px"
        android:id="@+id/t_fs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18595447  粉丝"
        />
    <TextView
        android:layout_toRightOf="@+id/t_fs"
        android:layout_marginTop="315px"
        android:layout_marginLeft="25px"
        android:id="@+id/t_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        />
    <TextView
        android:layout_marginLeft="20px"
        android:layout_toRightOf="@+id/t_s"
        android:layout_marginTop="315px"
        android:id="@+id/t_gz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17  关注"
        />
    <TextView
        android:id="@+id/jia_gz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+关注"
        android:background="@drawable/gz_shape"
        android:layout_toRightOf="@id/sdv_3"
        android:layout_below="@+id/t_gz"
        android:paddingTop="12px"
        android:paddingBottom="12px"
        android:paddingLeft="140px"
        android:paddingRight="140px"
        android:layout_margin="14px"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18"
        android:drawableTop="@drawable/ic_zhan"
        android:padding="10px"
        android:background="@drawable/zhan_shape"
        android:layout_alignParentRight="true"
        android:layout_marginTop="320px"
        />

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/x_v_shiping"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/jia_gz" />
</RelativeLayout>
