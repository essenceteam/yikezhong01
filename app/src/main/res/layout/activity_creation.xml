<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.liufan.xiangmu.activity.CreationActivity"
    android:orientation="vertical"
    android:background="@drawable/www">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#0BAAF4">
<TextView
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:textColor="#fff"
    android:text="取消"
    android:textSize="25dp"
    android:id="@+id/qx_te"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="创作"
        android:textSize="25dp"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="40dp"/>
</LinearLayout>
    <ImageView
        android:id="@+id/ship_iv"
        android:layout_marginTop="50dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/videovideo"
        android:background="#E0F683"/>
    <ImageView
        android:id="@+id/wenb_iv"
        android:layout_marginTop="80dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/duanziduanzi"
        android:background="#E0F683"/>
</LinearLayout>
